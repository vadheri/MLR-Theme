<?php
                    $all_posts = get_posts(array(
                        'posts_per_page'    => 7,
                        'post_type'         => 'news',
                        'orderby'           => 'date',
                        'order'             => 'DESC',
                    ));

                    if ($all_posts) : ?>
                        <div class="box-left d-flex">
                            <?php 
                            for ($i = 0; $i < 3; $i++) :
                                $post = $all_posts[$i];
                                setup_postdata($post);
                            ?>
                                <div class="left-post">
                                    <a href="<?php the_permalink(); ?>">
                                        <?php if (has_post_thumbnail()) : 
                                            $thumbnail_id = get_post_thumbnail_id();
                                            $thumbnail_url = wp_get_attachment_image_src($thumbnail_id, 'custom-size', true);
                                        ?>  
                                            <div class="featured-image">
                                                <img src="<?php echo esc_url($thumbnail_url[0]); ?>" alt="<?php the_title_attribute(); ?>" />
                                            </div>
                                        <?php endif; ?>
                                        <div class="single-main-text">
                                            <div class="box-title">
                                                <?php the_title('<h4>', '</h4>'); ?>
                                            </div>
                                            <div class="box-description">
                                                <p><?php echo esc_html(get_the_excerpt()); ?></p>
                                            </div>
                                        </div>    
                                    </a>
                                </div>
                            <?php endfor; ?>
                        </div>
                        <div class="box-right">
                            <?php 
                            for ($i = 3; $i < 7; $i++) : 
                                $post = $all_posts[$i];
                                setup_postdata($post); 
                            ?>
                                <div class="right-post">
                                    <a href="<?php the_permalink(); ?>" class="d-flex">
                                        <?php if (has_post_thumbnail()) : 
                                            $thumbnail_id = get_post_thumbnail_id();
                                            $thumbnail_url = wp_get_attachment_image_src($thumbnail_id, 'custom-size', true); // Use custom image size
                                        ?>  
                                            <div class="featured-image">
                                                <img src="<?php echo esc_url($thumbnail_url[0]); ?>" alt="<?php the_title_attribute(); ?>" />
                                            </div>
                                        <?php endif; ?>
                                        <div class="single-main-text">
                                            <div class="box-title">
                                                <?php the_title('<h4>', '</h4>'); ?>
                                            </div>
                                            <div class="box-description">
                                                <p><?php echo esc_html(get_the_excerpt()); ?></p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            <?php endfor; ?>
                        </div>
                    <?php wp_reset_postdata(); ?>
                    <?php endif; ?>